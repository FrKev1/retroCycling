{% extends 'base.html.twig' %}

{% block navbar %}
    <nav class="container container-nav">
        <input type="checkbox" name="checkbox" id="check">
        
        <div class="nav-btn">
            <div class="nav-links">
                <ul class="nav-links-ul">
                    <li class="nav-link" style="--i: .6s">
                        <a href="{{path('front_home')}}" class="active">Accueil</a>
                    </li>
                    <li class="nav-link" style="--i: 1.1s">
                        <a href="{{path('front_home')}}#a-la-une">A la une</a>
                    </li>
                    <li class="nav-link" style="--i: .85s">
                        <a href="#">Collection<i class="fas fa-caret-down"></i></a>
                        <div class="dropdown">
                            <ul>
                                <li class="dropdown-link">
                                    <a href="{{path('front_collection50_60')}}">Années 50-60</a>
                                </li>
                                <li class="dropdown-link">
                                    <a href="{{path('front_collection70')}}">Années 70</a>
                                </li>
                                <li class="dropdown-link">
                                    <a href="{{path('front_collection80')}}">Années 80</a>
                                </li>
                                <li class="dropdown-link">
                                    <a href="{{path('front_collection90')}}">Années 90</a>
                                </li>
                            </ul>
                        </div>
                    </li>
                    <li class="nav-link" style="--i: 1.35s">
                        <a href="{{path('front_home')}}" class="logo-a"><img class="logo" src="/assets/images/logo-retro.png" alt="logo-retro"></a>
                    </li>
                    <li class="nav-link" style="--i: 1.1s">
                        <a href="{{path('front_blog')}}">Blog</a>
                    </li>
                    <li class="nav-link" style="--i: 1.35s">
                        <a href="{{path('front_contact_us')}}">Contact</a>
                    </li>
                    {% if app.user %}
                        <li class="nav-link" style="--i: .85s">
                            <a href="#">Connecté<i class="fas fa-caret-down"></i></a>
                            <div class="dropdown">
                                <ul>
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <li class="dropdown-link">
                                            <a href="{{path('admin_cycling_shirts')}}">Admin</a>
                                        </li>
                                     {% elseif is_granted('ROLE_USER') %}
                                        <li class="dropdown-link">
                                            <a href="{{path('user_profil')}}">Mon profil</a>
                                        </li>
                                    {% endif %}
                                    
                                    <li class="dropdown-link">
                                        <a href="{{path('app_logout')}}">Déconnexion</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                    {% else %}
                        <li class="nav-link" style="--i: 1.35s">
                            <a href="{{path('app_login')}}">Connexion</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>

        <div class="hamburger-menu-container">
            <div class="hamburger-menu">
                <div></div>
                <a href="{{path('front_home')}}"><img class="hamburger-logo" src="/assets/images/logo-retro.png" alt="logo-retro"></a>
            </div>
        </div>
    </nav>
{% endblock %}

{% block footer %}
    <footer class="nav-footer">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-6">
                    <h6>À propos</h6>
                    <p class="text-footer">retro-cycling.fr est un site communautaire visant les passioné(e)s de cyclisme avant tout.
                        retro-cycling se concentre sur l'histoire du cyclisme, les maillots, les coureurs, les grands tours etc...
                    </p>
                </div>
                <div class="col-xs-6 col-md-6">
                    <h6>Liens</h6>
                    <ul class="footer-links">
                        <li><a href="{{path('front_legal_notice')}}" title="Mentions légales du site">Mentions légales</a></li>
                        <li class="developped-by-text">Github : <a class="github-link" href="https://github.com/YannRaulet/retroCycling" target="_blank"><img class="logo-github" src="/assets/images/logo-github.png" title="Dépot Github du projet" alt="logo Github"></a></li>
                    </ul>
                </div>
            </div>
            <hr>
            <p class="copyright-footer">Copyright &copy; 2021 All Rights Reserved by <a href="https://retro-cycling.fr/" title="Liens du site retro-cycling">retro-cycling</a>.</p>
        </div>
    </footer>
{% endblock %}
{% block javascript %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}

{# This is the home page that will display the cycling shirts's for 50 - 60's collection #}

{% extends 'front/front_layout.html.twig' %}

{% block title %}{{ parent() }}-Maillot{% endblock %}

{% block body %}
    <section>
        <div class="background-picture-home"></div>
    </section>

     <section>
     
        {% if app.user %}
            <a id="favoriteBtn" href="{{ path("front_shirt_cycling50_60", { id: cyclingShirt50_60.id }) }}">
                <i class="{{ app.user.favorites(cyclingShirt50_60) ? 'fas' : 'far' }} fa-heart"></i>
            </a>
        {% endif %}
    
        <div class="favorite-container">
            <i onclick="Toggle()" id="favoriteBtn"class="far fa-heart"></i>
        </div>

        <h2 class="shirt-description">{{ cyclingShirt50_60.name }}</h2>
        <hr class="shirt-details-hr">
        <div class = "card-wrapper">
            <div class = "picture-display">
                <div class = "picture-showcase">
                    <img class="picture-load" src="/assets/images/uploads/{{ cyclingShirt50_60.pictureFront }}" alt = "Maillot face avant">
                    <img class="picture-load" src="/assets/images/uploads/{{ cyclingShirt50_60.pictureBack }}" alt = "Maillot face arrière">
                </div>
            </div>
            <div class = "picture-select">
                <div class = "picture-item">
                <a href = "#" data-id = "1">
                    <img class="picture-load" class="picture" src="/assets/images/uploads/{{ cyclingShirt50_60.pictureFront }}" alt = "Maillot face avantt">
                </a>
                </div>
                <div class = "picture-item">
                <a href = "#" data-id = "2">
                    <img class="picture-load" src="/assets/images/uploads/{{ cyclingShirt50_60.pictureBack }}"  alt = "Maillot face arrière">
                </a>
                </div>
            </div>
        </div>
    </section>

    <section>
        <h2 class="shirt-description">Porté par</h2>
        <hr class="shirt-details-hr">
        <p class="shirt-description-p">{{ cyclingShirt50_60.cyclistName }}</p>
    </section>

    <section>
        <h2 class="shirt-description">informations sur l'équipe</h2>
        <hr class="shirt-details-hr">
        <p class="shirt-description-p">{{ cyclingShirt50_60.teamInformations }}</p>
    </section>

    <section>
        <h2 class="shirt-description">Résultats notables</h2>
        <hr class="shirt-details-hr">
        <p class="shirt-description-p">{{ cyclingShirt50_60.results }}</p>
    </section>

    <script>
    let favoriteBtn = document.getElementById('favoriteBtn')

    function Toggle() {
        if (favoriteBtn.classList.contains("far")) {
            favoriteBtn.classList.remove("far");
            favoriteBtn.classList.add("fas")
        } else {
            favoriteBtn.classList.remove("fas");
            favoriteBtn.classList.add("far")
        }
    }
    </script>
    {% block javascript %}
        {{parent()}}
        {{ encore_entry_script_tags('switchCyclingShirt') }}
    {% endblock %}
{% endblock %}

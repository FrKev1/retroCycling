{# This is the home page that will display the cycling shirts's for 80's collection #}

{% extends 'front/front_layout.html.twig' %}

{% block title %}{{ parent() }}-Maillot{% endblock %}

{% block body %}
    <section>
        <div class="background-picture-home"></div>
    </section>

    <section>
        <h2 class="shirt-description">{{ cyclingShirt80.name }}</h2>
        <hr class="shirt-details-hr">
        <div class = "card-wrapper">
            <div class = "picture-display">
                <div class = "picture-showcase">
                    <img class="picture-load" src="/assets/images/uploads/{{ cyclingShirt80.pictureFront }}" alt = "Maillot face avant">
                    <img class="picture-load" src="/assets/images/uploads/{{ cyclingShirt80.pictureBack }}" alt = "Maillot face arrière">
                </div>
            </div>
            <div class = "picture-select">
                <div class = "picture-item">
                <a href = "#" data-id = "1">
                    <img class="picture-load" class="picture" src="/assets/images/uploads/{{ cyclingShirt80.pictureFront }}" alt = "Maillot face avant">
                </a>
                </div>
                <div class = "picture-item">
                <a href = "#" data-id = "2">
                    <img class="picture-load" src="/assets/images/uploads/{{ cyclingShirt80.pictureBack }}"  alt = "Maillot face arrière">
                </a>
                </div>
            </div>
        </div>
    </section>

    <section>
        <h2 class="shirt-description">Porté par</h2>
        <hr class="shirt-details-hr">
        <p class="shirt-description-p">{{ cyclingShirt80.cyclistName }}</p>
    </section>

    <section>
        <h2 class="shirt-description">informations sur l'équipe</h2>
        <hr class="shirt-details-hr">
        <p class="shirt-description-p">{{ cyclingShirt80.teamInformations }}</p>
    </section>

    <section>
        <h2 class="shirt-description">Résultats notables</h2>
        <hr class="shirt-details-hr">
        <p class="shirt-description-p">{{ cyclingShirt80.results }}</p>
    </section>

    {% block javascript %}
        {{parent()}}
        {{ encore_entry_script_tags('switchCyclingShirt') }}
    {% endblock %}
{% endblock %}

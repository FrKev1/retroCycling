{% extends 'admin/admin_layout.html.twig' %}

{% block title %}{{ parent() }}-Admin-Les maillots{% endblock %}

{% block body %}

    <h1 class="title-crud">Liste des maillots</h1>
    <a class="btn btn-success btn-created" href="{{ path('admin_cycling_shirt_new') }}">Créer un maillot</a>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Image avant</th>
                <th>Image arrière</th>
                <th class="table-shirt-name-hidden">Nom </th>
                <th>Années</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cycling_shirt in cycling_shirts %}
            <tr>
                <td><img src="/assets/images/uploads/{{ cycling_shirt.pictureFront }}"></td>
                <td><img src="/assets/images/uploads/{{ cycling_shirt.pictureBack }}"></td>
                <td class="table-shirt-name-hidden">{{ cycling_shirt.name }}</td>
                <td>{{ cycling_shirt.years }}</td>
                <td>
                    <a class="btn btn-outline-dark" href="{{ path('admin_cycling_shirt_show', {'id': cycling_shirt.id}) }}" role="button">Détails</a>
                    <a class="btn btn-outline-dark"href="{{ path('admin_cycling_shirt_edit', {'id': cycling_shirt.id}) }}" role="button">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">Aucun maillot trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

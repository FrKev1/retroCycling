{% extends 'front/front_layout.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form class="login-form" method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
             Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
    {% endif %}

    <h1 class="login-h1">Connexion</h1>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
        class="form-control" required autofocus>
    <label for="inputPassword">Password</label> 
    <input type="password" name="password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
<div class="login-container-btn">
    <a class="btn btn-lg btn-primary registrer-login-btn" href="{{ path('app_registrer') }}"
        role="button">S'inscrire</a>
    <button class="btn btn-lg btn-primary login-btn" type="submit">
        Connexion
    </button>
</div>
</form>

{% endblock %}
